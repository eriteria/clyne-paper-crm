{
  "name": "clyne-paper-crm",
  "version": "1.0.0",
  "description": "Production-ready CRM system for Clyne Paper Limited tissue paper factory",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "prod": "concurrently \"npm run dev:backend\" \"npm run start:frontend\"",
    "build": "npm run install:all && npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "deploy:setup": "npm run build && cd backend && npm run migrate:deploy",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run db:seed",
    "db:reset": "cd backend && npm run db:reset",
    "test": "concurrently \"npm run test:backend\" \"npm run test:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:backend:unit": "cd backend && npm run test -- --testPathPattern=tests/unit",
    "test:backend:integration": "cd backend && npm run test -- --testPathPattern=tests/integration",
    "test:integration": "cd backend && npm run test -- --testPathPattern=tests/integration",
    "test:e2e": "cd tests && npx playwright test",
    "test:e2e:ui": "cd tests && npx playwright test --ui",
    "test:e2e:debug": "cd tests && npx playwright test --debug",
    "test:security": "cd backend && npm run test -- --testPathPattern=tests/security",
    "test:security:zap": "echo 'Run OWASP ZAP scan - requires ZAP installed'",
    "test:perf": "cd tests/perf && artillery run artillery-config.yml",
    "test:perf:k6": "cd tests/perf && k6 run k6-load-test.js",
    "test:a11y": "cd frontend && npm run test:accessibility",
    "test:coverage": "concurrently \"npm run test:backend:coverage\" \"npm run test:frontend:coverage\"",
    "test:backend:coverage": "cd backend && npm run test:coverage",
    "test:frontend:coverage": "cd frontend && npm test -- --coverage --watchAll=false",
    "test:inventory": "node tests/utils/generate-inventory.js",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "crm",
    "tissue-paper",
    "inventory",
    "sales",
    "invoices",
    "nextjs",
    "express",
    "prisma"
  ],
  "author": "Clyne Paper Limited",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend"
  ]
}
